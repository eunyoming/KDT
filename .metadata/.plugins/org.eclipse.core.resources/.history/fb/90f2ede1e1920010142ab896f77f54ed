<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Board">
	<insert id="insert">
		insert into board (seq, writer, title, contents, create_at, view_count) values (board_seq.nextval, #{writer}, #{title}, #{contents}, sysdate, 0)
	<!-- 입력한 seq 가져오기 -->
	<selectKey order="AFTER" keyProperty="seq" resultType="int">
		select board_seq.currval from dual
	</selectKey>
	</insert>
	
	<delete id="deleteBySeq">
		delete from board where seq = #{seq}
	</delete>
	
	<update id="updateBySeq">
		update board set title = #{title}, contents = #{contents} where seq = #{title}
	</update>
	
	
	<select id="getAllList" resultType="com.kedu.dto.BoardDTO">
		select * from board order by seq desc
	</select>
	
	<select id="getSelectFromTo" resultType="com.kedu.dto.BoardDTO">
		select * from (select board.*,  row_number() over(order by seq desc) rn from board) where rn between #{from} and #{to} order by 1 desc
	</select>
	
	<select id="getListBySeq" resultType="com.kedu.dto.BoardDTO">
		select * from board where seq = #{seq}
	</select>
</mapper>