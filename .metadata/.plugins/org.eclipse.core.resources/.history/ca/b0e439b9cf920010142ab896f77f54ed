<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Messages">

	<insert id="insert">
		insert into messages values(messages_seq.nextval, #{sender},
		#{message})
		<!-- 주의! #{sender} 는 나중에 getSender로 작동하기 때문에 getter가 없으면 오류남. -->
		<!-- $를 붙이면 ''이 안 붙고, #을 붙이면 ''이 붙는 문자열로 처리 (숫자도 # 가능) -->
		<!-- 테이블명 같은 경우는 $ 사용해야 됨. -->
		<!-- 끝에 세미콜론 빼기 ! -->
	</insert>

	<delete id="deleteBySeq">
		delete from messages where seq = #{seq}
	</delete>

	<update id="updateBySeq">
		update messages set sender = #{sender}, message =
		#{message} where seq = #{seq}
	</update>

	<select id="selectAll" resultType="com.kedu.dto.MessagesDTO">
		select * from messages
	</select>

	<select id="selectBy" resultType="com.kedu.dto.MessagesDTO">
		select * from messages where
		${column} like '%'||#{keyword}||'%'
	</select>
	
	<!-- sender, message -->
	<select id="searchtByMultiple"
		resultType="com.kedu.dto.MessagesDTO">
		select * from messages
		<trim prefix="where" prefixOverrides="and|or">
		<!-- trim은 안에 내용이 없으면 동작을 안 함 -->
		<!-- prefix : 접두사, prefixOverrides : 무효화 시킨다. -->
		<!-- prefixOverrides 가 prefix 보다 먼저 동작한다. -->
			<if test="sender!=''">
				sender like '%'||#{sender}||'%'
			</if>
			<if test="message!=''">
				and message like '%'||#{message}||'%'
			</if>
		</trim>
	</select>
	
	<select id="selectBySeq" resultType="com.kedu.dto.MessagesDTO">
		select * from messages where seq = #{seq}
	</select>
</mapper>