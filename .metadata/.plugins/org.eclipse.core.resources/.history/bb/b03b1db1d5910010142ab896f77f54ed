package com.kedu.dao;

import java.sql.Connection;

import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.ArrayList;
import java.util.List;

import javax.naming.Context;
import javax.naming.InitialContext;
import javax.sql.DataSource;

import org.springframework.stereotype.Repository;

import com.kedu.dto.FilesDTO;

@Repository
public class FilesDAO {

	private static FilesDAO instance;

	private FilesDAO() {
	}

	// DAO getter 만들기
	public synchronized static FilesDAO getInstance() {
		if(instance == null) {
			instance = new FilesDAO();
		}
		return instance;
	}

	// get 커넥션 만들어주기
	public Connection getConnection() throws Exception{
		// ctx 인스턴스 생성
		Context ctx = new InitialContext();

		// DataSource 찾아오기
		DataSource ds = (DataSource)ctx.lookup("java:comp/env/jdbc/oracle");

		return ds.getConnection();
	}

	// insert
	public int insert(FilesDTO dto) throws Exception{
		String sql = "insert into files values(files_seq.nextval, ?, ?, ?, ?)";

		try(Connection con = this.getConnection();
				PreparedStatement pst = con.prepareStatement(sql)){
			pst.setString(1, dto.getWriter());
			pst.setString(2, dto.getOriName());
			pst.setString(3, dto.getSysName());
			pst.setInt(4, dto.getParent_seq());

			return pst.executeUpdate();
		}
	}

	// select * from files
		public List<FilesDTO> getAllList() throws Exception{
			String sql = "select * from files order by seq";

			try(Connection con = this.getConnection();
					PreparedStatement pst = con.prepareStatement(sql);
					ResultSet rs = pst.executeQuery();){

				List<FilesDTO> list = new ArrayList<>();

				while(rs.next()) {
					int seq = rs.getInt("seq");
					String writer = rs.getString("writer");
					String oriName = rs.getString("oriName");
					String sysName = rs.getString("sysName");
					int parent_seq = rs.getInt("parent_seq");

					FilesDTO dto = new FilesDTO(seq, writer, oriName, sysName, parent_seq);
					list.add(dto);
				}
				return list;
			}
		}
}
