<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Messages">
	
	<insert id="insert">
		insert into messages values(messages_seq.nextval, #{sender}, #{message})
		<!-- 주의! #{sender} 는 나중에 getSender로 작동하기 때문에 getter가 없으면 오류남. -->
		<!-- $를 붙이면  ''이 안 붙고, #을 붙이면 ''이 붙는 문자열로 처리 (숫자도 # 가능)-->
		<!-- 테이블명 같은 경우는 $ 사용해야 됨. -->
		<!-- 끝에 세미콜론 빼기 ! -->
	</insert>
	
	<delete id="deleteBySeq">
		delete form messages where seq = #{seq}
	</delete>
	
	<update id="updateBySeq">
		update messages set sender = #{sender}, message = #{message} where seq = #{seq}
	</update>
</mapper>